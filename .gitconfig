[user]
	email = lihang.lin@gmail.com
	name = Li-Hang Lin

[core]
	editor = emacs
	whitespace = trailing-space,space-before-tab,cr-at-eol
#	whitespace=fix,indent-with-non-tab,trailing-space,cr-at-eol

[merge]
	tool = ediff

[alias]
	diff = diff --color
	s = status

[color]
ui = auto
branch = auto
diff = auto
status = auto
log = auto
grep = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
whitespace = red reverse

[color "status"]
#added = yellow
#changed = green
untracked = cyan
